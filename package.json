{
  "name": "eth-bsc-bridge",
  "version": "1.0.0",
  "description": "Token bridge between Ethereum and Binance Smart Chain",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miquelcabot/eth-bsc-bridge.git"
  },
  "author": "Miquel Ã€ngel Cabot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miquelcabot/eth-bsc-bridge/issues"
  },
  "homepage": "https://github.com/miquelcabot/eth-bsc-bridge#readme",
  "scripts": {
    "compile": "hardhat compile",
    "hardhat:node": "hardhat node",
    "coverage": "hardhat coverage",
    "prettier:sol": "prettier --write 'contracts/**/*.sol'",
    "prettier:ts": "prettier --write '**/*.js' '**/*.ts'",
    "lint:sol": "hardhat check",
    "lint:ts": "eslint . --ext .ts,.js --ignore-path .eslintignore",
    "lint:ts-fix": "eslint . --fix --ext .ts,.js --ignore-path .eslintignore",
    "type-check": "tsc --pretty --noEmit",
    "test:localnet": "hardhat test --network hardhat",
    "test:gas": "GAS_REPORT=TRUE hardhat test",
    "test-all": "yarn lint:ts && yarn type-check",
    "deploy:localnet": "hardhat deploy --network hardhat",
    "deploy:rinkeby": "hardhat run --network rinkeby scripts/deploy.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "sh -c 'yarn type-check'",
      "yarn lint:ts-fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nomiclabs/buidler": "^1.4.8",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.1-solc-0.7",
    "@openzeppelin/contracts-upgradeable": "^3.3.0",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "eslint": "^7.25.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.0",
    "hardhat": "^2.1.2",
    "hardhat-deploy": "^0.7.5",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
